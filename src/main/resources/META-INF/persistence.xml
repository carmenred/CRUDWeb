<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="CRUDWeb">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.car.crudweb.entities.Alumnos</class>
        <class>com.car.crudweb.entities.Historial</class>
        <class>com.car.crudweb.entities.Modulos</class>
        <class>com.car.crudweb.entities.Profesores</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/notaslinkia"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="none"/>
            <property name="hibernate.default_schema" value="notaslinkia2"/>
        </properties>
    </persistence-unit>
</persistence>
